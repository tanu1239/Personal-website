      </section>

      <section class="section-block">
        <h2>Projects</h2>
        <div class="grid">
          {projects.map((p) => (
            <div class="card">
              <h3>{p.title}</h3>
              <p>{p.blurb}</p>

              <div class="links">
                <a href={`/projects/${p.slug}`}>Project page →</a>

                {p.repos ? (
                  <span>
                    <a href={p.repo} target="_blank">GitHubExp1 →</a>
                    {p.repos.map((link, i) => (
                      <a href={link} target="_blank">GitHubExp{i + 2} →</a>
                    ))}
                  </span>
                ) : (
                  <a href={p.repo} target="_blank">GitHub →</a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>

      <footer>
        <small>© {new Date().getFullYear()} Tanush Paradeshi</small>
      </footer>
    </main>
  </body>
</html>
